{
  "name": "setmeld-pod",
  "version": "1.0.0",
  "description": "SetMeld Pod: Community Solid Server + Git over SSH (git-shell)",
  "main": "./dist/index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run dev:setup && concurrently -k -n server,git,ui \"npm:dev:server\" \"npm:dev:sshd\" \"npm:dev:ui\"",
    "dev:setup": "bash ./scripts/dev-setup.sh",
    "dev:sshd": "bash ./scripts/dev-sshd.sh",
    "dev:server": "nodemon --watch src --watch config --ext ts,json --exec \"npm run build:server && npm run start:server\"",
    "dev:ui": "cd ui && npm run build:server:watch",
    "start:server": "node ./node_modules/@solid/community-server/bin/server.js -c ./config/config.json -m ./ -f ./data -g localhost:2229",
    "build:server": "npm run build:server:ts && npm run build:server:components",
    "build:server:components": "componentsjs-generator -s src -c dist/components -r iss -i .componentsignore",
    "build:server:ts": "tsc",
    "build:ui": "cd ui && npm install && npm run build:server",
    "build": "npm run build:server && npm run build:ui",
    "bundle": "npm run build && bash ./scripts/build-packages.sh",
    "test:bundle": "bash ./scripts/test-deb.sh"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SetMeld/setmeld-pod.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/SetMeld/setmeld-pod/issues"
  },
  "homepage": "https://github.com/SetMeld/setmeld-pod#readme",
  "devDependencies": {
    "@tsconfig/node18": "^18.2.4",
    "@types/express": "^5.0.1",
    "@types/multer": "^1.4.12",
    "@typescript-eslint/eslint-plugin": "^8.30.0",
    "@typescript-eslint/parser": "^8.30.0",
    "componentsjs-generator": "^4.3.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@ldo/connected-solid": "^1.0.0-alpha.28",
    "@solid/access-token-verifier": "^2.1.0",
    "@solid/community-server": "^8.0.0-alpha.0",
    "body-parser": "^2.2.0",
    "componentsjs": "^6.3.0",
    "express": "^5.1.0",
    "express-remove-route": "^1.0.0",
    "multer": "^1.4.5-lts.2",
    "yup": "^1.6.1"
  },
  "types": "./dist/index.d.ts",
  "lsd:module": "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod",
  "lsd:components": "dist/components/components.jsonld",
  "lsd:contexts": {
    "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod/^1.0.0/components/context.jsonld": "dist/components/context.jsonld"
  },
  "lsd:importPaths": {
    "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod/^1.0.0/components/": "dist/components/",
    "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod/^1.0.0/config/": "config/",
    "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod/^1.0.0/dist/": "dist/"
  }
}