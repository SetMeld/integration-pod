{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "incremental": true,
    "lib": [
      "es2021"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "inlineSources": true,
    "newLine": "lf",
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "stripInternal": true
  },
  "types": [
    "node"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}