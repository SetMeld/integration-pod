{
  "@context": [
    "https://linkedsoftwaredependencies.org/bundles/npm/@solid/community-server/^8.0.0/components/context.jsonld",
    "https://linkedsoftwaredependencies.org/bundles/npm/asynchronous-handlers/^1.0.0/components/context.jsonld",
    "https://linkedsoftwaredependencies.org/bundles/npm/setmeld-pod/^1.0.0/components/context.jsonld"
  ],
  "@graph": [
    {
      "@type": "Override",
      "overrideInstance": {
        "@id": "urn:solid-server:default:BaseHttpHandler"
      },
      "overrideSteps": [
        {
          "@type": "OverrideListInsertBefore",
          "overrideParameter": {
            "@id": "StatusWaterfallHandler:_handlers"
          },
          "overrideTarget": {
            "@id": "urn:solid-server:default:IdentityProviderHandler"
          },
          "overrideValue": {
            "@id": "urn:solid-server:default:IntegrationRouteHandler"
          }
        }
      ]
    },
    {
      "comment": "Routes all integration related requests to the relevant handlers.",
      "@id": "urn:solid-server:default:IntegrationRouteHandler",
      "@type": "RouterHandler",
      "baseUrl": {
        "@id": "urn:solid-server:default:variable:baseUrl"
      },
      "targetExtractor": {
        "@id": "urn:solid-server:default:TargetExtractor"
      },
      "allowedPathNames": [
        "^/.integration/api/.*"
      ],
      "handler": {
        "@id": "urn:solid-server:default:IntegrationHandler"
      }
    },
    {
      "comment": "Handles Integration Route",
      "@id": "urn:solid-server:default:IntegrationHandler",
      "@type": "IntegrationHandler",
      "baseUrl": {
        "@id": "urn:solid-server:default:variable:baseUrl"
      },
      "rootFilePath": {
        "@id": "urn:solid-server:default:variable:rootFilePath"
      },
      "gitUri": {
        "@id": "urn:solid-server:default:variable:gitUri"
      }
    },
    {
      "comment": "The ssh uri for the git server (example.com:2222)",
      "@id": "urn:solid-server:default:variable:gitUri",
      "@type": "Variable"
    },
    {
      "@type": "Override",
      "overrideInstance": {
        "@id": "urn:solid-server-app-setup:default:CliExtractor"
      },
      "overrideSteps": [
        {
          "@type": "OverrideListInsertAt",
          "overrideParameter": {
            "@id": "YargsCliExtractor:_parameters"
          },
          "overrideTarget": 0,
          "overrideValue": {
            "@type": "YargsParameter",
            "name": "gitUri",
            "options": {
              "alias": "g",
              "requiresArg": true,
              "type": "array",
              "describe": "The URI for the git server. (example.com:2222)"
            }
          }
        }
      ]
    },
    {
      "@type": "Override",
      "overrideInstance": {
        "@id": "urn:solid-server-app-setup:default:ShorthandResolver"
      },
      "overrideSteps": [
        {
          "@type": "OverrideListInsertAt",
          "overrideParameter": {
            "@id": "CombinedShorthandResolver:_resolvers"
          },
          "overrideTarget": 0,
          "overrideValue": {
            "CombinedShorthandResolver:_resolvers_key": "urn:solid-server:default:variable:gitUri",
            "CombinedShorthandResolver:_resolvers_value": {
              "@type": "KeyExtractor",
              "key": "gitUri",
              "defaultValue": "localhost:2222"
            }
          }
        }
      ]
    }
  ]
}