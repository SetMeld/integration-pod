[Unit]
Description=SetMeld Pod - Git SSHD
After=network.target
Wants=setmeld-pod.target

[Service]
User=root
Group=root
EnvironmentFile=/etc/setmeld-pod/config.env
ExecStartPre=/usr/bin/install -d -o root -g root /run/setmeld-pod
ExecStart=/usr/sbin/sshd -D -f /etc/setmeld-pod/sshd/sshd_config
Restart=on-failure

[Install]
WantedBy=setmeld-pod.target
